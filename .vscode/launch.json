    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'fenesbin'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fenesbin",
                    "--package=nes"
